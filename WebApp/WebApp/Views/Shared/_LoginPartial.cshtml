@using Microsoft.AspNetCore.Identity
@using WebCrawler.WebApp.DbModel.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <li>
            <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Mój profil</a>
        </li>
        <li>
            <button type="submit" class="btn-small">Wyloguj</button>
        </li>
    </form>
}
else
{
    <li><a asp-area="Identity" asp-page="/Account/Register">Rejestracja</a></li>
    <li><a asp-area="Identity" asp-page="/Account/Login">Zaloguj</a></li>
}