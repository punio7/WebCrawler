@model WebCrawler.WebApp.WebApp.Models.Apps.ListSessionsViewModel
@{
    ViewData["Title"] = "Lista sesji";
}

<h2>@ViewData["Title"]</h2>

<table class="table-hover table-vertical-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>Aplikacja</th>
            <th>Twórca</th>
            <th>Stan</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var session in Model.Sessions)
        {
            <tr>
                <td>1</td>
                <td>@session.AppDisplayName</td>
                <td>@session.CreatorDisplayName</td>
                <td>@session.StateDisplay</td>
                <td>
                    <a class="paper-btn" asp-controller="Apps" asp-action="JoinToSession" asp-route-id="@session.Id">Dołącz</a>
                </td>
            </tr>
        }
    </tbody>
</table>
